<div class="attachments">
  <table>
    <tbody>
      <% for attachment in attachments %>
        <tr id="attachment_<%= attachment.id %>">
          <td>
            <%= link_to_attachment attachment, class: 'icon icon-attachment' -%>
            <%= h(" - #{attachment.description}") unless attachment.description.blank? %>
            <span class="size">(<%= number_to_human_size attachment.filesize, precision: 3 %>)</span>
            <% if options[:deletable] %>
              <%= link_to icon_wrapper('icon-context icon-delete', l(:button_delete)),
                          attachment,
                          { data: { confirm: l(:text_are_you_sure) },
                            method: :delete,
                            class: 'delete',
                            title: l(:button_delete),
                            remote: true } %>
            <% end %>
            <% if options[:author] %>
              <span class="author"><%= h(attachment.author) %>, <%= format_time(attachment.created_on) %></span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
